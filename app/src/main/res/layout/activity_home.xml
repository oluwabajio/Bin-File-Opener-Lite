<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tt_white"
    android:paddingHorizontal="10dp"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tt_black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/this_binary_file_try_the_second_method"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/tt_black"
            android:text="Select"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/method1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tt_black"
            android:textColor="@color/tt_white"
            android:paddingHorizontal="30dp"
            android:text="Method 1"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/method2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tt_black"
            android:textColor="@color/tt_white"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:text="Method 2"/>


    </LinearLayout>

</RelativeLayout>